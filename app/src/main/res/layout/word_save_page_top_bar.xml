<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/lin_l_save_page_main_top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_back_to_home"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_arrow_back_24dp"/>
        <ImageView
            android:id="@+id/iv_sent"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_send_black_24dp"
            android:layout_marginLeft="120dp"/>
        <ImageView
            android:id="@+id/iv_change_appearance"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_visibility_black_24dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/iv_save_page_menu"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_menu_black_24dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_l_save_page_edit_top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_abort_edit"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_close_black_24dp"/>
        <ImageView
            android:id="@+id/iv_step_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_step_back_black_24dp"
            android:layout_marginLeft="120dp"/>
        <ImageView
            android:id="@+id/iv_step_forward"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_step_forward_black_24dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_save_black_24dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</LinearLayout>